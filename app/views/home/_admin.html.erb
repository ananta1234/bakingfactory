<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>

<h2>Welcome To A &amp; M Bread Express</h2>

<div id="tabbed">


  <tabs>

    <tab name="Sales" v-bind:selected="true">
        <br>
        <h5>Store Sales This Year By Month</h5>
    	<div id="container" style="width:100%; height:400px;"></div>
        <br>
        <h5>Store Sales This Year By Weekday</h5>
        <div id="container4" style="width:100%; height:400px;"></div>
    </tab>

    <tab name="Customers">
    	<div id="container3" style="width:100%; height:400px;"></div>
    </tab>

    <tab name="Items">
    	<div id="container2" style="width:100%; height:400px;"></div>
    </tab>

  </tabs>
</div>

<script type="text/javascript">

document.addEventListener('DOMContentLoaded', function () {
	var dataLoad = <%= @data %>;
	var dataLoad2 = <%= @data1 %>;
	var dataLoad3 = <%= @data2 %>;
	var months = <%= raw (@months) %>;


	var currentYear = <%= @this_year %>;

    var myChart = Highcharts.chart('container', {
    	
        chart: {
            type: 'bar'
        },
        title: {
            text: ''
        },
        xAxis: {
            categories: months
        },
        yAxis: {
            title: {
                text: 'Sales ($)'
            }
        },
        series: [{
            name: '2018',
            data: dataLoad
        }, {
            name: '2017',
            data: dataLoad2
        }, {
            name: '2016',
            data: dataLoad3
        }]
    });
});

</script>


<script type="text/javascript">
        
document.addEventListener('DOMContentLoaded', function () {

    var weekday = <%=raw (Date::DAYNAMES) %>;
    var items_ordered = <%= @week_data %>;

    var myChart = Highcharts.chart('container4', {
        
        chart: {
            type: 'bar'
        },
        title: {
            text: ''
        },
        xAxis: {
            categories: weekday
        },
        yAxis: {
            title: {
                text: 'Grand Total Purchased'
            }
        },
        series: [{
            name: 'Weekday Sales',
            data: items_ordered
        }]
    });
});


</script>

<script type="text/javascript">
		
document.addEventListener('DOMContentLoaded', function () {

	var items = <%=raw (@all_items) %>;
	var quant = <%= @all_item_total_quan %>;

    var myChart = Highcharts.chart('container2', {
    	
        chart: {
            type: 'bar'
