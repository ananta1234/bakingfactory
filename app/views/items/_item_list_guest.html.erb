<% if @active_items.empty? %>
  <h4>No items at this time.</h4>
<% else %>
<br>
  <%= render :partial => "partials/title_with_search", locals: {title: "Items"} %>

    <div id="tabbed">
      <tabs>

        <tab name="breads" v-bind:selected="true">

            <table class="table table-striped">
              <thead>
                <tr>
                  <th width="150">Name</th>
                  <th width="75">Price</th>
                  <th width="100">Weight</th>
                  <th width="100">Active</th>
                </tr>
              </thead>
              <tbody>
                <% @breads.each do |item| %>
                  <tr>
                    <td><%= link_to item.name, item_path(item) %></td>
                    <td><%= number_to_currency item.current_price %></td>
                    <td><%= item.weight%></td>
                    <td><%= item.active ? "Yes" : "No"%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <%= will_paginate @breads, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  

        </tab>

        <tab name="muffins">

            <table class="table table-striped">
              <thead>
                <tr>
                  <th width="150">Name</th>
                  <th width="100">Units Per Item</th>
                  <th width="100">Weight</th>
                </tr>
              </thead>
              <tbody>
                <% @muffins.each do |item| %>
                  <tr>
                    <td><%= link_to item.name, item_path(item) %></td>
                    <td><%= item.units_per_item%></td>
                    <td><%= item.weight%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <%= will_paginate @muffins, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  


        </tab>

        <tab name="pastries">

            <table class="table table-striped">
              <thead>
                <tr>
                  <th width="150">Name</th>
                  <th width="100">Units Per Item</th>
                  <th width="100">Weight</th>
                </tr>
              </thead>
              <tbody>
                <% @pastries.each do |item| %>
                  <tr>
                    <td><%= link_to item.name, item_path(item) %></td>
                    <td><%= item.units_per_item%></td>
                    <td><%= item.weight%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <%= will_paginate @pastries, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  


        </tab>

      </tabs>
    </div>

<% end %>

<p>&nbsp;</p>
