<% if logged_in? && ( current_user.role?(:admin)) %>

	<div class="row">
	  <div class="col s8">
	    <!-- primary partial gets displayed here in main div -->
	    <%= render partial: "user_details" %>
	    <%= render partial: "partials/object_options", locals: {model_name: "user", object: @user}  %>

	  </div>
	  <div class="col s4">
	    <!-- render the sidebar, if it exists -->
	  </div>

	</div>

<% else %>

	<div class="row">
	  <div class="col s8">
	    <!-- primary partial gets displayed here in main div -->
	    <%= render partial: "account_details" %>
	  </div>
	  <div class="col s4">
	    <!-- render the sidebar, if it exists -->
	  </div>

	</div>

<% end %>

